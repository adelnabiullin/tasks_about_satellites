<% provide(:title, @task.name) %>
<div class="row">
  <div class="span3">
    <br>
    <%= link_to "Изменить", edit_task_path(@task), class: "btn" if current_user.admin? %>
    <%= link_to "Удалить", @task, method: :delete, class: "btn btn-inverse", 
      data: { confirm: "Вы уверены?" } if current_user.admin? %>
  </div>
  <div class="span3 offset6">
    <h1>Задача <%= @task.id %></h1>
  </div>
  <div class="span6">
    <h3><%= @task.name %></h3>
  </div>
  <div class="span12">
    <p>
      <%= @task.content %>
    </p>
  </div>
  <div class="span7">
    <br>
    <form class="form-horizontal">
      <fieldset>
        <legend>Нашли решение? Спешите сюда.</legend>
        <div class="control-group">
          <label class="control-label" for="fileInput">Файл:</label>
          <div class="controls">
            <%= render 'shared/solution_form' %>
          </div>
        </div>
      </fieldset>
    </form>
  </div>
</div>