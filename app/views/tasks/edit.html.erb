<% provide(:title, "Редактирование данных задачи") %>
<h1>Обновление данных задачи</h1>
<div class="row">
  <div class="span12">
    <%= form_for(@task) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :name, 'Название' %>
      <%= f.text_field :name %>
      <%= f.label :content, 'Текст задачи' %>
      <%= f.text_area :content %>
      <%= f.submit "Сохранить изменения", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>